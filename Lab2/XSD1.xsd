<?xml version="1.0" encoding="utf-8" ?> 
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:element name="Candies">
<xs:complexType>
<xs:sequence>
<xs:element maxOccurs="unbounded" name="Candy">
<xs:complexType>
<xs:sequence>
  <xs:element maxOccurs="unbounded" name="type" type="xs:string" /> 
  <xs:element name="name" type="xs:string" /> 
  <xs:element name="energy"> 
	<xs:simpleType>
    	<xs:restriction base="xs:integer">
      		<xs:minInclusive value="0"/>
      		<xs:maxInclusive value="600"/>
		<xs:pattern value="[0-9]{3}"/>
    	</xs:restriction>
  </xs:simpleType>
</xs:element> 
<xs:element minOccurs="0" maxOccurs="unbounded" name="ingredients">
<xs:complexType>
<xs:simpleContent>
<xs:extension base="xs:string">
  <xs:attribute name="mg" type="xs:unsignedShort" use="optional" /> 
  <xs:attribute name="chocolateType" type="xs:string" use="optional" /> 
  </xs:extension>
  </xs:simpleContent>
  </xs:complexType>
  </xs:element>
  <xs:element name="production" type="xs:string" /> 
<xs:element minOccurs="0" maxOccurs="unbounded" name="value">
<xs:complexType>
<xs:simpleContent>
<xs:extension base="xs:unsignedByte">
  <xs:attribute name="type" type="xs:string" use="required" /> 
  </xs:extension>
  </xs:simpleContent>
  </xs:complexType>
  </xs:element>
  </xs:sequence>
  <xs:attribute name="id" type="xs:unsignedByte" use="required" /> 
  </xs:complexType>
  </xs:element>
  </xs:sequence>
  </xs:complexType>
  </xs:element>
  </xs:schema>